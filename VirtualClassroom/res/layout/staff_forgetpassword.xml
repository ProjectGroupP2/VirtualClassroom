<TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Enter Security Question" />
        <!--  Password TextField -->

        <EditText
            android:id="@+id/staffRecoverySecurityQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notification" />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Enter the Answer" />
        <!--  Password TextField -->
        <EditText
            android:id="@+id/staffRecoveryAnswer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Your Password Is" />
        <!--  Password TextField -->
        <EditText
            android:id="@+id/staffRecoveredPassword"
            android:editable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
         <Button
            android:id="@+id/btnStaffRetrivePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Retrieve Password" />
    

</LinearLayout>
</ScrollView>