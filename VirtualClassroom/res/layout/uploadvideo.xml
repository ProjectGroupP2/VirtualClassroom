<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "@drawable/imgggg"
     >

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" 
         android:background = "@drawable/uploadvideo" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Enter Standard " />
    <EditText
        android:id="@+id/videouploadStandard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Enter Subject" />
    
<EditText
        android:id="@+id/videouploadSubject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadButton"
        android:layout_below="@+id/textView2"
        android:ems="10" />

<TextView
    android:id="@+id/txtSpace"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="" />

<TextView
    android:id="@+id/txtVideoName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter new Video Name" />

<EditText
    android:id="@+id/editVideoName"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:ems="10"
    android:hint="Give name with extension(e.g. video.mp4)" />

<Button
        android:id="@+id/button_selectvideo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_toRightOf="@+id/imageView_pic"
        android:text="Select Video"
        android:textStyle="bold" />

<Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView_pic"
        android:layout_alignLeft="@+id/imageView_pic"
        android:background="#000000"
        android:text="Upload"
        android:textColor="#ffffff" />

<ImageView
    android:id="@+id/imageView_pic"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadButton"
        android:layout_below="@+id/uploadButton"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />


    

    

<!--         <requestFocus /> -->
<!--     </EditText> -->

   
    

    

    

    

</LinearLayout>
</ScrollView>